{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "SDL2",
			"command": "C:\\MinGW\\bin\\g++.exe",
			"args": [
				"-g",
				"src/*.cpp",
				"-o",
				"build/game.exe",
				"-IC:/mingw_dev_lib/include/SDL2",
				"-LC:/mingw_dev_lib/lib",
				"-lmingw32",
				"-lSDL2main",
				"-lSDL2",
				"-lSDL2_image",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
    ]
}